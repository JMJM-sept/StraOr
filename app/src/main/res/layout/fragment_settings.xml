<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/itemBlock1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pen"/>

            <TextView
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Fountain Pens"
                android:fontFamily="@font/paytone"
                android:textSize="26sp"
                android:textColor="@color/ancora"/>

            <TextView
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inconsolata"
                android:text="A fountain pen is a writing instrument that uses liquid ink stored in an internal reservoir and delivers it continuously to the paper through a metal tip called a nib. Unlike ballpoint pens, fountain pens do not use thick ink or a rolling ball, resulting in a smoother and more expressive writing experience."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemBlock2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ink"/>

            <TextView
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Inks"
                android:fontFamily="@font/paytone"
                android:textSize="26sp"
                android:textColor="@color/ancora"/>

            <TextView
                android:id="@+id/info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inconsolata"
                android:text="Fountain pen ink is a water-based liquid ink specifically designed to flow smoothly through a fountain penâ€™s feed and nib. Using the correct ink is essential for proper performance and to avoid damage."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemBlock3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/note"/>

            <TextView
                android:id="@+id/title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Notebooks for fountain pens."
                android:fontFamily="@font/paytone"
                android:textSize="26sp"
                android:textColor="@color/ancora"/>

            <TextView
                android:id="@+id/info3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inconsolata"
                android:text="Not all notebook paper works well with fountain pen ink. Good fountain-pen-friendly notebooks have:
Smooth, high-quality paper that lets the nib glide comfortably
Thicker paper (higher GSM) that prevents ink from bleeding through or feathering
Low ghosting (minimal show-through from the other side of the page)
Lay-flat binding so writing is easier across the whole page"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemBlock4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="790dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pencil"/>

            <TextView
                android:id="@+id/title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Drawing Pencils"
                android:fontFamily="@font/paytone"
                android:textSize="26sp"
                android:textColor="@color/ancora"/>

            <TextView
                android:id="@+id/info4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inconsolata"
                android:text="Drawing pencils are graphite-based pencils used for sketching, shading, technical drawing, and fine art. They come in a range of hardness grades that affect how dark or light the marks are and how easily the graphite lays down on paper."
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
