<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/cd_surface"
        app:strokeWidth="1dp"
        app:strokeColor="@color/cd_stroke"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp">

            <ImageView
                android:id="@+id/imgMascota"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mascota"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Bienvenido a CareDate"
                android:textAlignment="center"
                android:textColor="@color/cd_text_primary"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Organiza tus citas médicas y tu información de forma sencilla."
                android:textAlignment="center"
                android:textColor="@color/cd_text_secondary"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIniciarSesion"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="20dp"
                android:text="Iniciar sesión"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/cd_on_primary"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/cd_primary"
                app:rippleColor="@color/cd_ripple"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCrearCuenta"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="12dp"
                android:text="Crear cuenta"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/cd_primary"
                app:cornerRadius="16dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/cd_primary"
                app:backgroundTint="@android:color/transparent"
                app:rippleColor="@color/cd_ripple"/>

            <TextView
                android:id="@+id/tvFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Al continuar, aceptas los términos y condiciones."
                android:textAlignment="center"
                android:textColor="@color/cd_text_tertiary"
                android:textSize="12sp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
