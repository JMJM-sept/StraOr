<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/cd_login_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <!-- Mascota -->
        <ImageView
            android:id="@+id/imgMascota"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/mascota"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Iniciar sesión"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/cd_text_primary"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/imgMascota"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvSubLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Accede para gestionar tus citas y tu información."
            android:textSize="14sp"
            android:textColor="@color/cd_text_secondary"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/tvTituloLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp" />

        <!-- Card contenedora -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/cd_surface"
            app:strokeWidth="1dp"
            app:strokeColor="@color/cd_stroke"
            app:layout_constraintTop_toBottomOf="@id/tvSubLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- Label correo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo"
                    android:textStyle="bold"
                    android:textColor="@color/cd_text_secondary"
                    android:textSize="13sp" />

                <!-- ✅ ID que usa tu Java: correoInput -->
                <EditText
                    android:id="@+id/correoInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/cd_input_bg"
                    android:hint="correo@ejemplo.com"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/cd_text_primary"
                    android:textColorHint="@color/cd_text_hint"
                    android:inputType="textEmailAddress" />

                <!-- Label contraseña -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textStyle="bold"
                    android:textColor="@color/cd_text_secondary"
                    android:textSize="13sp"
                    android:layout_marginTop="14dp" />

                <!-- ✅ ID que usa tu Java: passwordInput -->
                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/cd_input_bg"
                    android:hint="••••••••"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/cd_text_primary"
                    android:textColorHint="@color/cd_text_hint"
                    android:inputType="textPassword" />

                <!-- Botón Entrar -->
                <!-- ✅ ID que usa tu Java: btnLogin -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="18dp"
                    android:text="Entrar"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/cd_on_primary"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/cd_primary"
                    app:rippleColor="@color/cd_ripple" />

                <!-- Extra opcional (texto) -->
                <TextView
                    android:id="@+id/tvFooterLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CareDate · Salud organizada"
                    android:textAlignment="center"
                    android:textColor="@color/cd_text_tertiary"
                    android:textSize="12sp"
                    android:layout_marginTop="14dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
